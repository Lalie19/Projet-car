{% extends 'layout.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block content %}
<body class="row">
    <h1>Liste des utilisateurs</h1>
    
    <ul>
        {% for reservation in reservations %}
            <a href="/reservation/edit/{{ reservation.id }}">
                <li> {{ reservation.lastname }} {{ reservation.firstname }} - {{ reservation.email }} </li>
            </a>
        {% endfor %}
    </ul>

    <a href="/reservation/add" class="btn btn-primary">Ajouter un utilisateur</a>
    </body>
{% endblock %}
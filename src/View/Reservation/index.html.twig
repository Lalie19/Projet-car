        <option>3</option>
        </select>
    </div>
    <label class="col-form-label" for="birthday">Début : </label>
                <input type="date" class="form-control border border-3" name="birthday" value="{{ wizard.birthday }}">
                </div>
                <div class="form-group">
                <label class="col-form-label" for="birthday">Fin : </label>
                <input type="date" class="form-control border border-3" name="birthday" value="{{ wizard.birthday }}">
                </div>
